{{!-- Extend the main layout --}}
{{ header title="Dashboard"}}

<div class="container mt-5">
  {{!-- Page Title --}}
  <div class="text-center mb-5">
    <h1 class="display-4 text-primary fw-bold">12th WAFY FEST DASHBOARD</h1>
  </div>

  {{!-- College Information --}}
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-primary text-white text-center fw-bold">
          College Information
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>Aff. No:</strong> {{college.aff}}</p>
              <p><strong>Zone:</strong> {{college.zone}}</p>
              <p><strong>No. of Students:</strong></p>
              {{#if college.studentsThm}} <p>Thamhheediya: {{college.studentsThm}}</p>{{/if}}
              {{#if college.studentsAliya}} <p>Aliya: {{college.studentsAliya}}</p>{{/if}}
              {{#if college.studentsPg}} <p>PG: {{college.studentsPg}}</p>{{/if}}
              <p><strong>Total:</strong> {{college.total}}</p>
            </div>
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>College Name:</strong> {{college.name}}</p>
              <p><strong>Email:</strong> <a href="mailto:{{college.email}}" class="text-decoration-none">{{college.email}}</a></p>
              <p><strong>Phone:</strong> <a href="tel:{{college.phone}}" class="text-decoration-none">{{college.phone}}</a></p>
            </div>
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>Phase:</strong></p>
              <p>THM: {{#if college.studentsThm}} YES {{else}} NO {{/if}}, 
                 Aliya: {{#if college.studentsAliya}} YES {{else}} NO {{/if}}, 
                 PG: {{#if college.studentsPg}} YES {{else}} NO {{/if}}</p>
              <p><strong>Address:</strong> {{college.address}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- Fest Coordinator & Team Manager --}}
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-primary text-white text-center fw-bold">
          Fest Coordinator & Team Manager
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>Fest Coordinator (Staff):</strong></p>
              <p>{{coordinator.coordinator}}</p>
              <p><strong>Contact No:</strong> <a href="tel:{{coordinator.coordinatorMobile}}" class="text-decoration-none">{{coordinator.coordinatorMobile}}</a></p>
              <p><strong>WhatsApp No:</strong> <a href="https://wa.me/91{{coordinator.coordinatorWhatsApp}}" class="text-decoration-none">{{coordinator.coordinatorWhatsApp}}</a></p>
            </div>
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>Team Manager (Student):</strong></p>
              <p>{{coordinator.manager}}</p>
              <p><strong>Contact No:</strong> <a href="tel:{{coordinator.managerMobile}}" class="text-decoration-none">{{coordinator.managerMobile}}</a></p>
              <p><strong>WhatsApp No:</strong> <a href="https://wa.me/91{{coordinator.managerWhatsApp}}" class="text-decoration-none">{{coordinator.managerWhatsApp}}</a></p>
            </div>
            <div class="col-md-4 mb-3 text-md-start text-center">
              <p><strong>Asst. Team Manager:</strong></p>
              <p>{{coordinator.assistant}}</p>
              <p><strong>Contact No:</strong> <a href="tel:{{coordinator.assistantMobile}}" class="text-decoration-none">{{coordinator.assistantMobile}}</a></p>
              <p><strong>WhatsApp No:</strong> <a href="https://wa.me/91{{coordinator.assistantWhatsApp}}" class="text-decoration-none">{{coordinator.assistantWhatsApp}}</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- Notification Bar --}}
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="alert alert-info rounded-lg shadow-sm text-center" role="alert">
        <strong>Notification:</strong> {{notification}}
      </div>
    </div>
  </div>

  {{!-- Action Buttons --}}
  <div class="row text-center mb-5">
    <div class="col-md-12">
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">Manual</a>
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">Hall Ticket</a>
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">Schedule</a>
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">Topics</a>
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">All Results</a>
      <a href="#" class="btn btn-danger btn-lg m-2 rounded-pill shadow-sm">Grace Marks: Qualified Students</a>
    </div>
  </div>

  {{!-- Registration --}}
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-primary text-white text-center fw-bold">
          Registration
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center">
              <thead class="thead-dark">
                <tr>
                  <th colspan="2">Thamhheediya</th>
                  <th colspan="2">Aliya</th>
                  <th colspan="2">PG</th>
                  <th colspan="2">General</th>
                  <th colspan="2">Special Programmes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><a href="{{registration.thmoff}}" class="text-decoration-none">Off Stage</a></td>
                  <td><a href="{{registration.thmOn}}" class="text-decoration-none">On Stage</a></td>
                  <td><a href="{{registration.aliyaOn}}" class="text-decoration-none">Off Stage</a></td>
                  <td><a href="{{registration.aliyaOff}}" class="text-decoration-none">On Stage</a></td>
                  <td> <a href="{{registration.pgOn}}" class="text-decoration-none">OFF Stage</a></td>
                  <td><a href="{{registration.pgOff}}" class="text-decoration-none">On Stage</a></td>
                  <td colspan="2"><a href="{{registration.general}}" class="text-decoration-none">General</a></td>
                  <td colspan="2"><a href="{{registration.special}}" class="text-decoration-none">Special</a></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- Result --}}
  <div class="row mb-5">
    <div class="col-md-12">
      <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-primary text-white text-center fw-bold">
          Result
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center">
              <thead class="thead-dark">
                <tr>
                  <th>Item Wise</th>
                  <th>Participation Wise</th>
                  <th>College Wise</th>
                  <th>PG</th>
                  <th>Special Programmes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><a href="{{result.item}}" target="_blank" class="text-decoration-none">View Results</a></td>
                  <td><a href="{{result.participation}}" target="_blank" class="text-decoration-none">View Results</a></td>
                  <td><a href="{{result.college}}" target="_blank" class="text-decoration-none">View Results</a></td>
                  <td><a href="{{result.pg}}" target="_blank" class="text-decoration-none">View Results</a></td>
                  <td><a href="{{result.special}}" target="_blank" class="text-decoration-none">View Results</a></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
