{{!-- Extend the main layout --}}
{{ header title="Login"}}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
  <div class="card p-4 shadow-lg rounded-lg w-100" style="max-width: 400px;">
    <div class="card-body text-center">
      <h1 class="h4 text-primary mb-4">Login to 12th WAFY Fest</h1>
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username" class="sr-only">Username</label>
          <input type="text" id="username" name="username" class="form-control form-control-lg" placeholder="Username"
            required autofocus>
        </div>
        <div class="form-group">
          <label for="password" class="sr-only">Password</label>
          <input type="password" id="password" name="password" class="form-control form-control-lg"
            placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-lg btn-block rounded-pill mt-4 shadow-sm">Login</button>

        <div id="loading-spinner" class="d-none">
          <div class="spinner-border text-primary mt-4" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>

      </form>
      {{!-- <p class="mt-3 mb-0 text-muted">Don't have an account? <a href="/register" class="text-primary">Sign up</a>
      </p> --}}
      <p class="mt-3 mb-0 text-muted">{{#if error}} {{error}} {{/if}}</p>
    </div>
  </div>
</div>